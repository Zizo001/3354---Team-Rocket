<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "?attr/calenderBackground"
    tools:context=".MainActivity">
    <!-- Add TextView to display the date -->

    <!-- Add CalenderView to display the Calender -->

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:text="Set the Date"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <CalendarView
        android:id="@+id/calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="80dp"
        android:background="?attr/calenderBackground"
        android:layout_marginEnd="32dp"></CalendarView>

    <RelativeLayout
        android:id="@+id/settingLayout"
        android:layout_width="396dp"
        android:layout_height="77dp"
        android:layout_alignTop="@+id/date_view"
        android:layout_marginTop="465dp"
        android:gravity="bottom|center_vertical">

        <Button
            android:id="@+id/settingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
            android:text="Setting" />

        <Button
            android:id="@+id/yearView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/settingButton"
            android:drawableLeft="@android:drawable/ic_menu_day"
            android:text="Year View" />
    </RelativeLayout>

</RelativeLayout>
