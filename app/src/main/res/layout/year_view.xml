<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/yearText"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:background="#EB2020"
        android:fontFamily="@font/boogaloo"
        android:gravity="center"
        android:text="Year View"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#070707"
        android:textSize="42sp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="590dp">

        <Button
            android:id="@+id/buttonDecember"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="December"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonNovember"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="November"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonOctober"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="October"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonSeptember"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="September"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonJuly"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginStart="15dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="July"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonAugust"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="August"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonMay"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="May"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonJune"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="June"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonApril"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="April"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonJanuary"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="January"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonFebruary"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="February"
            android:textSize="24sp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonMarch"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="#3FB4EE"
            android:fontFamily="@font/boogaloo"
            android:text="March"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>
