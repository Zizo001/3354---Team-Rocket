<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F44336"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Year View"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#6D2A2A">

        <Button
            android:id="@+id/buttonOctober"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonJune"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="323dp"
            android:layout_marginBottom="119dp"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="October" />

        <Button
            android:id="@+id/buttonDecember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonJune"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="118dp"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="December" />

        <Button
            android:id="@+id/buttonNovember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonJune"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="118dp"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="November" />

        <Button
            android:id="@+id/buttonJuly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonJune"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="325dp"
            android:layout_marginBottom="307dp"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="July" />

        <Button
            android:id="@+id/buttonAugust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonJune"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="306dp"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="August" />

        <Button
            android:id="@+id/buttonSeptmeber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonJune"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="305dp"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="September" />

        <Button
            android:id="@+id/buttonJanuary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="January" />

        <Button
            android:id="@+id/buttonJune"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonMarch"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="479dp"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="June" />

        <Button
            android:id="@+id/buttonMay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonMarch"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="477dp"
            android:background="#3DBD99"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="May" />

        <Button
            android:id="@+id/buttonApril"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonJune"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="325dp"
